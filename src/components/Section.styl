.section {
  position: relative;
  padding: 100px 0;

  @media (max-width: 1024px) {
    padding: 40px 0;
  }
}

.section--dark {
  background-color: #fafafa;
}

.section--right {
  text-align: right;
  
  @media (max-width: 1024px) {
    text-align: left;
  }
}

.section__text {
  width: 50%;
  margin-bottom: 4rem;
  
  @media (max-width: 1024px) {
    width: 100%;
  }
}

.section__text--right {
  margin-left: auto;
}

.section__text--center {
  text-align: center;
  margin-right: auto;
  margin-left: auto;
}

.section__title {
  font-size: 2.5rem;
  font-weight: 300;
}

.section__description {
  font-size: 1.6rem;
  font-weight: 300;
}

.section-image {
  position: absolute;
  left: 0;
  top: 0;
  width: 50%;
  height: 100%;
  opacity: 0.3;

  .gatsby-image-wrapper {
    height: 100%;
  }
}